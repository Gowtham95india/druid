#!/bin/bash -eu

# Like run-pivot, but copies quickstart/pivot-settings.json to var/pivot/ first.

if [ "$#" -gt 1 ]
then
  echo "usage: $0 [conf-dir]" >&2
  exit 1
fi

PWD="$(pwd)"
WHEREAMI="$(dirname "$0")"

if [ "$#" -lt 1 ] || [ "x$1" = "x" ]
then
  CONFDIR="$WHEREAMI"/../conf
else
  CONFDIR="$1"
fi

CONFDIR="$(cd "$CONFDIR" && pwd)/pivot"
WHEREAMI="$(cd "$WHEREAMI" && pwd)"

"$WHEREAMI"/../bin/verify-node

if [ ! -e "$WHEREAMI/../var/pivot/pivot-settings.json" ]
then
  mkdir -p "$WHEREAMI/../var/pivot"
  cp "$WHEREAMI/../quickstart/pivot-settings.json" "$WHEREAMI/../var/pivot/pivot-settings.json"
fi

cd "$WHEREAMI/.."
exec node "$WHEREAMI"/../dist/pivot/bin/pivot -c "$CONFDIR"/config.yaml
